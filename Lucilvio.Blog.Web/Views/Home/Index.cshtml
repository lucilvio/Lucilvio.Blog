
@{
    ViewBag.Title = "Index";
}

<h1>Posts</h1>

@foreach(var post in Model)
{
    <div class="row">
        <div class="col-lg-12">
            <h3> @post.Titulo </h3>
            
            <p> @post.Texto </p>
            <span style="font-size: x-small"> <i class="glyphicon glyphicon-time"></i> @post.DataDoCadastro </span>
        </div>
    </div>
    <hr />
}

