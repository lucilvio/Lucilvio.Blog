@{
    ViewBag.Title = "Index";
}

<h1>Posts</h1>

@foreach (var post in Model.Posts)
{
    <div class="post">
        <div class="row">
            <div class="col-lg-12">
                <div style="height: 70px;">
                    <input type="hidden" id="idDoPost" value="@post.Id" />
                    <h3 class="pull-left"> @post.Titulo </h3>
                    @if (User.Identity.IsAuthenticated && post.PodeSerEditado)
                    {
                        <a style="margin-top: 25px; margin-left: 20px" class="pull-left" href="@Url.Action("Editar", "Post", new { post.Id })"> <i class="glyphicon glyphicon-pencil"> </i> </a>
                    }
                </div>
                <div>
                    <p> @post.Conteudo </p>

                    <span style="font-size: x-small"> <i class="glyphicon glyphicon-time"></i> @post.DataDoCadastro </span> &nbsp;
                    <span style="font-size: x-small"> <i class="glyphicon glyphicon-comment"></i> @post.QuantidadeDeComentarios </span> &nbsp;
                    <span style="font-size: x-small"> <i class="glyphicon glyphicon-user"></i> @post.NomeDoAutor </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <a href="@Url.Action("Ver", "Post", new { id = post.Id })"> Continuar lendo... </a>
            </div>
        </div>
    </div>
    <hr />
}