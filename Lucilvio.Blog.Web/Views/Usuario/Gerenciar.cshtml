
@{
    ViewBag.Title = "Index";
}

<h2>Gerenciar Usuários</h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-responsive">
            <tr>
                <th> Login </th>
                <th> Pode se Autenticar? </th>
                <th></th>
            </tr>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td> @usuario.Login </td>
                    <td> @Html.Raw(usuario.PodeSeAutenticar ? "<i class='glyphicon glyphicon-check'></i>" : "") </td>
                    <td> <a href="@Url.Action("Editar", "Usuario", new { id = usuario.Id })"> Editar </a> </td>
                </tr>
            }
        </table>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Cadastrar", "Usuario")" class="btn btn-primary"> Cadastrar Novo Usuário </a>
    </div>
</div>
