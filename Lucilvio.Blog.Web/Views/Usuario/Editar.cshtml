@model ModeloDeUsuario
@{
    ViewBag.Title = "Editar";
}

<h2>Editar usuário - @Model.Login</h2>

<div class="row">
    <form action="@Url.Action("Editar","Usuario")" method="post">
        <div class="col-lg-12">
            <div class="form-group">
                <label class="control-label"> Login </label>
                <input type="text" value="@Model.Login" name="Login" class="form-control"  required />
            </div>
            <div class="form-group">
                <label class="control-label"> Senha </label>
                <input type="password" value="@Model.Senha" name="Senha" class="form-control" required />
            </div>
            <div class="form-group">
                <label class="control-label"> Confirmacação da Senha </label>
                <input type="password" name="ConfirmacaoDaSenha" class="form-control" required />
            </div>
            <div class="form-group">
                <label class="control-label"> Pode se autenticar? </label>
                @Html.CheckBoxFor(u => u.PodeSeAutenticar)
            </div>
            <div class="form-group">
                <label class="control-label"> Administrador? </label>
                @Html.CheckBoxFor(u => u.EhAdministrador)
            </div>

            <button class="btn btn-primary" type="submit"> Editar </button>
        </div>
    </form>
</div>

