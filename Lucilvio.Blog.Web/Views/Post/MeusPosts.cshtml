@{
    ViewBag.Title = "Meus Posts";
}

<h2> Meus Posts </h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-responsive">
            <tr>
                <th> # </th>
                <th> Titulo </th>
                <th> Cadastrado em </th>
                <th> Comentários </th>
                <th></th>
            </tr>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td> @post.Id </td>
                    <td> @post.Titulo </td>
                    <td> @post.DataDoCadastro </td>
                    <td> <a href="@Url.Action("Editar", "Post", new { id = post.Id })"> Editar </a> </td>
                </tr>
            }
        </table>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Cadastrar", "Post")" class="btn btn-primary"> Cadastrar Novo Post </a>
    </div>
</div>
