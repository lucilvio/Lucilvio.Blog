@model ModeloDeEdicaoDePost
@{
    ViewBag.Title = "Editar Post";
}

<h2> Editar Post - <b> @Model.Id </b> </h2>

<form action="@Url.Action("Editar", "Post")" method="post">
    <input type="hidden" value="@Model.Id" name="Id" />

    <div class="form-group">
        <label class="control-label"> Título </label>
        <input type="text" class="form-control" name="Titulo" value="@Model.Titulo" />
    </div>

    <div class="form-group">
        <label class="control-label"> Conteúdo </label>
        <textarea class="form-control" name="Conteudo"> @Model.Conteudo </textarea>
    </div>

    <div class="form-group">
        <label class="control-label"> Permite Comentários? </label>
        @Html.CheckBoxFor(p => p.PermiteComentarios)
    </div>

    <div class="form-group">
        <label class="control-label"> Tags </label>
        <br />
        @for (int i = 0; i < Model.Tags.Tags.Count(); i++)
        {
            <input type="hidden" name='@("Tags.Tags[" + i + "].Id")' value="@Model.Tags.Tags[i].Id" />
            <input type="hidden" name='@("Tags.Tags[" + i + "].Nome")' value="@Model.Tags.Tags[i].Nome" />
            @Model.Tags.Tags[i].Nome @Html.CheckBox("Tags.Tags[" + i + "].Ativa", Model.Tags.Tags[i].Ativa)
        }
    </div>

    <button class="btn btn-primary"> Editar </button>
</form>

