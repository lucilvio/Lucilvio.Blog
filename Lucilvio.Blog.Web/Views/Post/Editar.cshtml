@{
    ViewBag.Title = "Editar Post";
}

<h2> Editar Post - <b> @Model.Id </b> </h2>

<form action="@Url.Action("Editar", "Post")" method="post">
    <input type="hidden" value="@Model.Id" name="Id" />

    <div class="form-group">
        <label class="control-label"> Título </label>
        <input type="text" class="form-control" name="Titulo" value="@Model.Titulo" />
    </div>

    <div class="form-group">
        <label class="control-label"> Conteúdo </label>
        <textarea class="form-control" name="Conteudo"> @Model.Conteudo </textarea>
    </div>

    <button class="btn btn-primary"> Editar </button>
</form>

